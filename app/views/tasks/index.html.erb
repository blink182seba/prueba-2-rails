<div class="container">
  <div class="row">
    <% @tasks.each_slice(4) do |row| %>
      <% row.each do |task| %>
        <div class="col">
          <div class="card">
            <%= image_tag task.photo, class: 'card-img-top'%>
            <div class="body">

              <h5><%= task.name%></h5>
              <% if current_user.tasks.where(orders:{ready: true})%>
                  <%= link_to "Listo", task_orders_path(task), class: 'btn btn-success', method: :post %>
              <% else %>
                  <%= link_to "No Listo", task_orders_path(task), class: 'btn btn-danger', method: :post %>
              <% end %>
            </div>
          </div>
        </div>
      <% end%>
      <div class="w-100"></div>
      <% end %>
  </div>
</div>
